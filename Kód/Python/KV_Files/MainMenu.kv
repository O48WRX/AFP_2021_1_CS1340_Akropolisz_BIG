#:import Clock kivy.clock.Clock
#:import partial functools
#:import socket socket
<MainMenu>:
    BoxLayout:
        orientation:"vertical"
        padding:200
        spacing:20
        Label:
            font_size:40
            bold:True
            text:"Video Creator"
            pos_hint:{'center_x': .5, 'center_y': .5}
        Button:
            text:"Make a Collage"
            size:(100, 150)
            pos_hint:{'center_x': .5, 'center_y': .5}
            background_color: 0.2, 0.9, 0.4, 1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "user_collage"
        Button:
            text:"Demo"
            size:(100, 150)
            pos_hint:{'center_x': .5, 'center_y': .5}
            background_color: 0.2, 0.9, 0.4, 1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "demo"

        Button:
            text:"Help"
            size:(100, 150)
            pos_hint:{'center_x': .5, 'center_y': .5}
            background_color: 0.2, 0.9, 0.4, 1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "help"
        Button:
            text:"Exit"
            size:(100, 150)
            pos_hint:{'center_x': .5, 'center_y': .5}
            background_color: 1, 0, 0, 1
            on_press: app.stop()
<CreateCollage>
    id: uc_coll
    BoxLayout:
        orientation:'vertical'
        Button:
            id:uc_vid1_button
            pos:(10, 300)
            size_hint:(0.5, 0.5)
            pos_hint:{'center_x': 0.5, 'center_y':0.5}
            text:"Első videó tallózás"
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 1
                root.manager.current = "vid1_fileselect"
        Button:
            id:uc_vid2_button
            size_hint:(0.5, 0.5)
            pos_hint:{'center_x': 0.5, 'center_y':0.5}
            text:"Második videó tallózás"
            pos:(10, 20)
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 1
                root.manager.current = "vid2_fileselect"
        Button:
            id:uc_vid3_button
            size_hint:(0.5, 0.5)
            pos_hint:{'center_x': 0.5, 'center_y':0.5}
            text:"Harmadik videó tallózás"
            pos:(450, 300)
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 1
                root.manager.current = "vid3_fileselect"
        Button:
            id:uc_vid4_button
            size_hint:(0.5, 0.5)
            pos_hint:{'center_x': 0.5, 'center_y':0.5}
            text:"Negyedik videó tallózás"
            pos:(450, 20)
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 1
                root.manager.current = "vid4_fileselect"
        BoxLayout:
            orientation:'horizontal'
            Button:
                text:"Back"
                pos_hint:{'x': 0, 'y': 0}
                size_hint:(0.5, 0.5)
                background_color: 1, 0, 0, 1
                on_press:
                    root.manager.transition.direction = "right"
                    root.manager.transition.duration = 1
                    root.manager.current = "main_menu"
            Button:
                text:"Tovább a kollázsomhoz"
                size_hint:(0.5, 0.5)
                on_press:
                    root.manager.transition.direction = "right"
                    root.manager.transition.duration = 1
                    root.manager.current = "my_collage"
<Demo>
    FloatLayout:
        size: (300, 300)

        Video:
            id: vid1
            size_hint_x: 0.4
            size_hint_y: 0.5
            source: "wavetest.mp4"
            state: "stop"
            allow_stretch: True

            pos: (10, 300)
            options: {'eos': 'loop'}
        Slider:
            id:v1_slider
            orientation:"horizontal"
            size_hint:0.2,0.5
            pos_hint:{"center_x":0.1,"center_y":0.5}
            step:0.1
            min:0
            max:10
            value:0
        Label:
            text:str(v1_slider.value)
            size_hint: 0.1, 0.1
            font_size: 30
            color:0.0, 0.0, 1.0
            pos_hint:{"center_x":0.3,"center_y":0.5}

        Video:
            id: vid2
            size_hint_x: 0.4
            size_hint_y: 0.5
            source: "wavetest.mp4"
            state: "stop"
            options: {'eos': 'loop'}
            allow_stretch: True
            pos: (450, 300)

        Slider:
            id:v2_slider
            orientation:"horizontal"
            size_hint:0.2,0.5
            pos_hint:{"center_x":0.85,"center_y":0.5}
            step:0.1
            min:0
            max:10
            value:0

        Label:
            text:str(v2_slider.value)
            size_hint: 0.1, 0.1
            font_size: 30
            color:0.0, 0.0, 0.0
            pos_hint:{"center_x":0.65,"center_y":0.5}



        Video:
            id: vid3
            size_hint_x: 0.4
            size_hint_y: 0.5
            source: "wavetest.mp4"
            state: "stop"
            allow_stretch: True

            pos: (10, 20)
            options: {'eos': 'loop'}
        Slider:
            id:v3_slider
            orientation:"horizontal"
            size_hint:0.2,0.5
            pos_hint:{"center_x":0.1,"center_y":0.08}
            step:0.1
            min:0
            max:10
            value:0
        Label:
            text:str(v3_slider.value)
            size_hint: 0.1, 0.1
            font_size: 30
            color:0.0, 0.0, 0.0
            pos_hint:{"center_x":0.3,"center_y":0.08}



        Video:
            id: vid4
            size_hint_x: 0.4
            size_hint_y: 0.5
            source: "wavetest.mp4"
            state: "stop"
            allow_stretch: True
            pos: (450, 20)
            options: {'eos': 'loop'}
        Slider:
            id:v4_slider
            orientation:"horizontal"
            size_hint:0.2,0.5
            pos_hint:{"center_x":0.85,"center_y":0.08}
            step:0.1
            min:0
            max:10
            value:0
        Label:
            text:str(v4_slider.value)
            size_hint: 0.1, 0.1
            font_size: 30
            color:0.0, 0.0, 0.0
            pos_hint:{"center_x":0.65,"center_y":0.08}




        Button:
            text: "Hey, this is the demo!"
            pos_hint:{'center_x': .5, 'center_y': .5}
            size_hint_x: 0.2
            size_hint_y: 0.1
            background_color: 0.2, 0.9, 0.4, 1

            on_press:
                Clock.schedule_once(lambda dt: setattr(vid1,'state','play'),v1_slider.value)
                Clock.schedule_once(lambda dt: setattr(vid2,'state','play'),v2_slider.value)
                Clock.schedule_once(lambda dt: setattr(vid3,'state','play'),v3_slider.value)
                Clock.schedule_once(lambda dt: setattr(vid4,'state','play'),v4_slider.value)

        Button:
            size_hint_x: 0.2
            size_hint_y: 0.1
            pos_hint:{'center_x': .5, 'center_y': .35}
            text:"Back"
            background_color: 1, 0, 0, 1
            on_press:
                setattr(vid1,'state','stop')
                setattr(vid2,'state','stop')
                setattr(vid3,'state','stop')
                setattr(vid4,'state','stop')
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 1
                root.manager.current = "main_menu"
